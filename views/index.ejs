
<html>
    <head>
        <title>
            Mega Deals
        </title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body class="container">
          
            <div class="panel panel-primary">
                    <div class="panel-heading h2">Deals Forum</div>
                    
                    <% if (!(typeof message=='undefined' )) { %>
                        <%=status%>
                       <% if (status=='1'){ %>
                        <div class="alert alert-warning h3" role="alert">
                            <%=message%>
                          </div>
                        <% } else { %>
                            <div class="alert alert-success h3" role="alert">
                                <%=message%>
                              </div>
                        <% } %>
                    <% } %>
                    <div class="panel-body">
                        <form action="addDeals" method="POST" >
                            <div class="form-group">
                                <label>Deal Name :</label>
                                <input type="text" name="dname" class="form-control">
                                <label>User Name:</label>
                                <input type="text" name="uname" class="form-control">
                                <label>Description</label>
                                <textarea name="udesc" class="form-control"> </textarea>
                            </div>
                            <input class="btn btn-success" type="submit" value="Save Deal" class="form-control">
                        </form>
                    </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading h2">Above Selected Deal Already have Thse Users </div>
                <div class="panel-body">
                    <% if (!(typeof dataValue=='undefined' )){ %>
                        <% dataValue.forEach(function(entry){ %>
                            <ul class="list-group">
                                <li class="list-group-item h3">
                                    <span class="float-left">
                                            <%=entry%>
                                    </span>
                                   
                                    <% if (!(typeof dealName=='undefined')) { %>
                                        
                                        <span class="float-right">
                                            <a href="/undeal?uid=<%=entry%>&did=<%=dealName%>" class="btn btn-danger" >Clic To UnDeal</a>
                                        </span>
                                    <% } %>
                                </li>
                            </ul>
                        <% }); %>
                    <% } %>
                </div>
            </div>
    </body>
</html>
